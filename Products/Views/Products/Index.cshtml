@{
    var prodects = (List<ProductModel>)ViewData["prodects"];
    Layout = "_LayoutDesign";
}

<table class="table table-striped" style="width: 100%; margin: 0px;">
    <thead style="background-color: lightpink; text-align: center;">
        <tr style="width: 100%; margin: 0px;text-align: center;">
            <th scope="col">ID </th>
            <th scope="col">Name </th>
            <th scope="col">Price </th>
            <th scope="col">Image </th>
            <th scope="col">Information </th>
        </tr>
    </thead>
    @foreach (var item in prodects)
    {

        <tbody>
            <tr style="width: 100%; margin: 0px; text-align: center;">
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td><img src="@item.Image" alt="@item.Image" width="150" height="100" /></td>
                <td><button type="button" class="btn btn-light"><a href="/products/details/@item.Id">Show</a></button></td>
            </tr>
        </tbody>
    }
</table>
 
